{
  "manifest_version": 3,
  "name": "YouTube Miniplayer Button Restorer",
  "version": "0.1.0",
  "description": "Restores the missing miniplayer button to YouTube's video player",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [],
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  }
}
