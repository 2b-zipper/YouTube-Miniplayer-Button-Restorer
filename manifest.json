{
  "manifest_version": 3,
  "name": "YouTube Miniplayer Button Restorer",
  "version": "0.1.2",
  "description": "__MSG_extensionDescription__",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [],
  "default_locale": "en",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-miniplayer-restorer@2ipper.com",
      "strict_min_version": "109.0"
    }
  }
}
